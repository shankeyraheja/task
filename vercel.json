{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "assets/**/*", "use": "@vercel/static" },
    { "src": "public/assets/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/assets/(.*)$", "dest": "/assets/$1" },

    { "src": "^/public/assets/(.*)$", "dest": "/public/assets/$1" },

    { "src": "/(.*)$", "dest": "/$1" }
  ]
}
